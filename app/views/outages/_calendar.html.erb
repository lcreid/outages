<div class="<%= 'calendar-' + view %>">
  <%= link_to "<<", { controller: controller_name, action: action_name, date: @prev }, id: "calendar-previous" %>
  <%= @date %>
  <%= link_to ">>", { controller: controller_name, action: action_name, date: @next }, id: "calendar-next" %>
  <%= link_to "Day", day_outages_path(date: @date), id: "calendar-day" %>
  <%= link_to "Four Day", four_day_outages_path(date: @date), id: "calendar-four-day" %>
  <%= link_to "Week", week_outages_path(date: @date), id: "calendar-week" %>
  <%= link_to "Month", month_outages_path(date: @date), id: "calendar-month" %>
  <%= yield %>
</div>

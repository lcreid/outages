<h1>Outages</h1>

<%= link_to 'New Outage', new_outage_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Start</th>
      <th>End</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% @outages.each do |outage| %>
      <tr>
        <td><%= outage.title %></td>
        <td><%= outage.start_datetime_in_time_zone_s(current_time_zone) %></td>
        <td><%= outage.end_datetime_in_time_zone_s(current_time_zone) %></td>
        <td><%= outage.description %></td>
        <td><%= link_to 'Edit', edit_outage_path(outage) %></td>
        <td><%= link_to 'Delete',
          outage_path(outage),
          method: :delete,
          data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Outage', new_outage_path %>
